<ListBoxItem x:Class="Help.TranslateListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Help"
             mc:Ignorable="d" Background="White"
             BorderBrush="{DynamicResource AccentColorBrush}"
             BorderThickness="1">
  <StackPanel>
    <WrapPanel Margin="24,5,24,5">
      <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="Deutsch:" FontSize="16" Height="30" />
      <TextBlock Margin="20,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Text="{Binding Deutsch}" Height="30" FontSize="16" />
    </WrapPanel>
    <WrapPanel Margin="24,10,24,5">
      <Label VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Englisch:" FontSize="16" Height="30" />
      <TextBlock Margin="20,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Text="{Binding Englisch}" FontSize="16" Height="30" />
    </WrapPanel>
  </StackPanel>
</ListBoxItem>