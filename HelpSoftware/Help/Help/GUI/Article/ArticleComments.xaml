<UserControl x:Class="Help.ArticleComments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Help"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded">
  <Grid>
    <ListBox x:Name="lboxTop" VerticalAlignment="Top" Margin="24" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" />
    <TextBox x:Name="tbCommentTitle" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="50" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" />
    <TextBox x:Name="tbComment" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="200" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" />
    <Button x:Name="test" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100" Height="30" Content="addComment" Click="test_Click" />
    <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Height="20" Click="Button_Click" />
  </Grid>
</UserControl>