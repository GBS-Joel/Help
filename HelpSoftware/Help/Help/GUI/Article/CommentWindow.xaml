        xmlns:lib="clr-namespace:Help.Library;assembly=Help.Library"
        xmlns:local="clr-namespace:Help"
        mc:Ignorable="d"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="CommentWindow">
