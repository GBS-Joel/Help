<Window x:Class="Help.GUI.ErrorMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Help.GUI"
        mc:Ignorable="d"
        Title="Fehler"
        Height="450" Width="800">
  <Grid>
    <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="{Binding TitleError}" />
    <TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,50,0,0" Width="700" Height="300" Text="{Binding InnerMessage}" />
    <Button Content="OK" Width="100" Height="40" Margin="25,50,50,25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Button_Click" />
    <Button Content="Copy To Clipboard" Width="100" Height="40" Margin="100,50,200,25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Button_Click_1" />
  </Grid>
</Window>