<lib:HelpUserControl
        x:Class="Help.CreateBooklet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:Help.Library;assembly=Help.Library"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:Help"
        mc:Ignorable="d"
        Title="CreateBooklet" Height="450" Width="800">
  <Grid>
    <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="Create a Booklet" />
    <TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" x:Name="tbName" Margin="0,50,0,0" />
    <TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Margin="0,100,0,0" x:Name="tbDesc" />
    <Button VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="This is a test" Click="Button_Click" />
  </Grid>
</lib:HelpUserControl>