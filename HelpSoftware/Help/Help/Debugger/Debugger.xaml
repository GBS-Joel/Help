<Window x:Class="Help.Debugger.Debugger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Help.Debugger"
        mc:Ignorable="d"
        Topmost="True"
        ResizeMode="NoResize"
        Title="Debugger" Height="600" Width="800">
  <Grid>
    <WrapPanel>
      <TabControl Width="800" Height="400">
        <TabItem Header="Database" x:Name="tab1" />
        <TabItem Header="Translation" x:Name="tab2" />
        <TabItem Header="Tools" x:Name="tab3" />
        <TabItem Header="Info" x:Name="tab4" />
      </TabControl>
      <TextBox VerticalAlignment="Top" HorizontalAlignment="Stretch" Width="770" Margin="10" Background="Red" Height="120" x:Name="Output" />
    </WrapPanel>
  </Grid>
</Window>