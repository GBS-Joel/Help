<Controls:MetroWindow
              x:Class="Help.ShowTopic"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:local="clr-namespace:Help"
              xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
              mc:Ignorable="d" 
              WindowStartupLocation="CenterOwner"
              WindowState="Maximized"
              Width="1920"
              Height="1200"
              Background="White">
  <Grid>
    <Label VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Content="Topics" FontWeight="Bold"/>
    <Grid Margin="0,100,0,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0.5*" />
        <ColumnDefinition Width="0.5*" />
      </Grid.ColumnDefinitions>
      <Grid Grid.Column="0">
        <ListBox x:Name="lbLeft" VerticalAlignment="Stretch" Margin="24" LostFocus="lbLeft_LostFocus"/>
      </Grid>
      <Grid Grid.Column="1">
        <ListBox x:Name="lbRight" VerticalAlignment="Stretch" Margin="24" LostFocus="lbRight_LostFocus"/>
      </Grid>
    </Grid>
  </Grid>
</Controls:MetroWindow>