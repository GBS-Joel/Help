          </StackPanel>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="2">
          <StackPanel>
            <TextBlock Text="Anzahl neue Articel" HorizontalAlignment="Center" FontSize="20" />
            <ContentPresenter x:Name="test8" />
          </StackPanel>
        </Grid>
      </Grid>
    </Grid>
  </Grid>
</Window>