<ListBoxItem x:Class="Help.CommentListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Help"
             mc:Ignorable="d">
  <Grid>
    <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Margin="24,10,0,0" Text="{Binding CurrentComment.CommentTitle}" FontSize="20" FontWeight="Bold"/>
    <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Margin="24,40,10,24" Text="{Binding CurrentComment.Comment}" FontSize="16" TextWrapping="Wrap" MaxWidth="750"/>
    <Image Width="20" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Source="/Resources/Images/account.png" Margin="20,20,20,2"/>
    <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="50,20,10,2" Text="{Binding CurrentComment.UserComment}" FontFamily="20" FontWeight="Bold" />
    <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="24,0,24,2" Text="{Binding CurrentComment.CommentTime}" FontSize="16"/>
  </Grid>
</ListBoxItem>